<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/bgticket3"
    android:longClickable="true"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgPhimCartLv"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:contentDescription="Movie Poster"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_movie"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTenRapCartLv"
        android:layout_width="86dp"
        android:layout_height="16dp"
        android:layout_marginTop="148dp"
        android:text="LOTTE"
        android:textColor="#EF0A0A"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvMaVeCartLv"
        android:layout_width="83dp"
        android:layout_height="19dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="140dp"
        android:text="MÃ SỐ 123"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvTenPhimCartLv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Movie Title"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgPhimCartLv"
        app:layout_constraintTop_toTopOf="@+id/imgPhimCartLv"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvNgayXemCartLv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="12/2/2002 8:30"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgPhimCartLv"
        app:layout_constraintTop_toBottomOf="@+id/tvTenPhimCartLv"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvTenGheCartLv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="Ghế: D30"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgPhimCartLv"
        app:layout_constraintTop_toBottomOf="@+id/tvNgayXemCartLv"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvGiaVeCartLv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Giá Vé"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgPhimCartLv"
        app:layout_constraintTop_toBottomOf="@+id/tvTenGheCartLv"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvThanhToanCartLv"
        android:layout_width="95dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Đã thanh toán"
        android:textColor="#E91E63"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgPhimCartLv"
        app:layout_constraintTop_toBottomOf="@+id/tvGiaVeCartLv"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/starIconImageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/baseline_local_movies_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMaVeCartLv"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvNgayDatCartLv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="108dp"
        android:text="22-2-2002 9:10"

        android:textColor="#F2FF71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
